!!!
%html
  %head
    %title
      = h(yield(:title) || "wIDE")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.5.custom.css'
    = yield :stylesheets

    = javascript_include_tag :defaults, 'jquery-ui-1.8.5.min.js', 'wide.js', 'notifications.js';
    = yield :javascripts

    = csrf_meta_tag

  %body
    #container.ui-widget-content
      #navbar.ui-widget-header
        - if user_signed_in?
          = link_to 'Logout', destroy_user_session_path

      - if show_title?
        #title
          %h1.ui-widget-header=h yield(:title)
      = yield :alternative_title

      #notification-wrapper.ui-widget
        #notification.ui-helper-hidden
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}"

      = yield
