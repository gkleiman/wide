- content_for :javascripts do
  = javascript_include_tag 'jquery.cookie.js', 'jquery.hotkeys.js', 'jquery.jstree.js', 'edit_area/edit_area_full.js'
- title "wIDE | #{current_user.email} | #{@project.name}", false

%h1= raw("wIDE | #{link_to(h(current_user.email), root_path)} | #{h(@project.name)}")

#toolbar
  = button_to 'Add File', '#', :id => 'add_file_button'
  = button_to 'Add Folder', '#', :id => 'add_folder_button'
  = button_to 'Rename', '#', :id => 'rename_button'
  = button_to 'Remove', '#', :id => 'remove_button'

#tree
#file_content
  = form_tag save_file_project_path(@project), :id => :file_edit do
    = hidden_field_tag :project_id, @project.to_param
    = hidden_field_tag :path
    = text_area_tag :content
