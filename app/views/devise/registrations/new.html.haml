- title 'wIDE | User Registration', true

.simple_form_container.ui-widget-content.ui-corner-all
  %h1.ui-widget-header Sign up
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = f.input :email, :input_html => { :class => 'ui-state-default' }
    = f.input :user_name, :input_html => { :class => 'ui-state-default' }
    = f.input :password, :input_html => { :class => 'ui-state-default', :size => 50 }
    = f.input :password_confirmation, :input_html => { :class => 'ui-state-default', :size => 50 }
    = f.button :submit
= render :partial => "devise/shared/links"
