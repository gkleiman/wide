- title 'wIDE | My Account', true

.simple_form_container.ui-widget-content.ui-corner-all
  %h1.ui-widget-header Account Information
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = f.input :user_name, :disabled => true
    = f.input :email
    = f.input :password, :hint => "Leave blank if you don't want to change it."
    = f.input :password_confirmation
    = f.input :current_password, :hint => "We need your current password to confirm your changes."
    = f.button :submit
